<Window x:Class="Case05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Case05"
        xmlns:vm="clr-namespace:Case05.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <StackPanel>
        <TextBox Text="{Binding InputString, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="{Binding UpperString}" />
        <Button Content="Clear Button." Command="{Binding ClearCommand}"/>
    </StackPanel>
</Window>
